<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.justin.drudgereader" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".feed.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".article.ArticleActivity"
            android:label="@string/title_activity_article"
            android:parentActivityName=".newssource.NewsSourceActivity">
        </activity>
        <activity
            android:name=".newssource.NewsSourceActivity"
            android:label="@string/title_activity_news_source" >
        </activity>
    </application>

</manifest>
